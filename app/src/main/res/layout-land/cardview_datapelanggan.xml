<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_marginStart="15dp"
    android:layout_height="230dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/cvIdpelanggan"
    android:elevation="4dp"
    android:background="#D2DCEF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTextIdPelanggan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#A9CEF4">

        <TextView
            android:id="@+id/tvIdPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID PELANGGAN"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NamaPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pegawai"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"/>


    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/tvNoHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="135dp"/>

    <Button
        android:id="@+id/btHubungi"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Hubungi"
        android:textSize="20dp"
        android:layout_marginTop="165dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/btLihat"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Lihat"
        android:textSize="20dp"
        android:layout_marginTop="165dp"
        android:layout_marginStart="195dp"
        />

</androidx.cardview.widget.CardView>
