<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/cvDataPelanggan"
    android:elevation="10dp"
    android:background="#D2DCEF"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tvIdPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID PELANGGAN"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#A9CEF4"
            android:paddingStart="20dp"
            android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/NamaPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan"
        android:textSize="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvNoHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"/>


    <TextView
        android:id="@+id/tvTerdaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terdaftar"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"/>


    <Button
        android:id="@+id/btHubungi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Hubungi"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/btLihat"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Lihat"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="177dp"
        />

</androidx.cardview.widget.CardView>
