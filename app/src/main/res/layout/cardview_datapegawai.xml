<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_height="250dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="20dp"
    android:id="@+id/cvDataPegawai"
    android:elevation="4dp"
    android:background="#D2DCEF">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvTextIdPegawai"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#A9CEF4">

        <TextView
            android:id="@+id/tvIdPegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID PEGAWAI"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamaPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pegawai"
        android:textSize="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvNoHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"/>


    <TextView
        android:id="@+id/tvTerdaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terdaftar"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"/>


    <Button
        android:id="@+id/btHubungi"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Hubungi"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/btLihat"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Lihat"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="195dp"
        />

</androidx.cardview.widget.CardView>