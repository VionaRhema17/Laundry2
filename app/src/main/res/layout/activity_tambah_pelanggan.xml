<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pelanggan.TambahPelangganActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Pelanggan"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvNamaLengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20dp"/>

     <EditText
        android:id="@+id/etNamaLengkap"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:background="@drawable/radius"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaLengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        app:layout_constraintTop_toBottomOf="@+id/etNamaLengkap"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp" />

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:padding="12dp"
        android:background="@drawable/radius"
        app:layout_constraintTop_toBottomOf="@id/tvAlamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvNoHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP Aktif"
        app:layout_constraintTop_toBottomOf="@+id/etAlamat"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp" />

    <EditText
        android:id="@+id/etNoHP"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="No HP Aktif"
        android:background="@drawable/radius"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNoHP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvCabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cabang"
        app:layout_constraintTop_toBottomOf="@+id/etNoHP"
        android:textSize="23sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp" />

    <EditText
        android:id="@+id/etCabang"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="Cabang"
        android:padding="12dp"
        android:background="@drawable/radius"
        app:layout_constraintTop_toBottomOf="@id/tvCabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btSimpan_TambahPelanggan"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Simpan"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCabang"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>